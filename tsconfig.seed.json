{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2019",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "scripts/**/*.ts",
        "db/**/*.ts",
        "types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}